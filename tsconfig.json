{
  "compilerOptions": {
    "target": "es2017",
    "lib": [],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "src/*"
      ],
      "@test/*": [
        "__tests__/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "importsNotUsedAsValues": "error"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
  ],
  "exclude": [
    "node_modules"
  ]
}